{
  "name": "automa-runner",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Local API service to run Automa workflows via Playwright",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development nodemon --watch src --ext js,json --signal SIGTERM --exec node src/server.js",
    "playwright:install": "playwright install chromium",
    "web:dev": "vite --config views/vite.config.mjs",
    "web:build": "vite build --config views/vite.config.mjs"
  },
  "dependencies": {
    "express": "^4.19.2",
    "nanoid": "^5.0.6",
    "playwright": "1.56.1",
    "vue": "3.4.38",
    "lucide-vue-next": "^0.378.0",
    "axios": "^1.7.7",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "@vitejs/plugin-vue": "^5.1.2",
    "vite": "^5.4.8"
  }
}
